{
  "name": "@opencustom/ui-kit",
  "version": "1.0.0",
  "description": "Minimalist UI Kit by OpenCustom",
  "main": "dist/oc-ui.js",
  "style": "dist/oc-ui.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "npx clean-css-cli -o dist/oc-ui.min.css dist/oc-ui.css",
    "minify:js": "npx terser dist/oc-ui.js -o dist/oc-ui.min.js -c -m",
    "release": "npm run build && npm run minify && git add . && git commit -m 'Release v$npm_package_version' && git tag v$npm_package_version && git push && git push --tags"
  },
  "keywords": [
    "ui",
    "css",
    "javascript",
    "kit"
  ],
  "author": "OpenCustom",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.44.1"
  }
}
